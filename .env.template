# SOP QA Tool Configuration Template
# Copy this file to .env and modify values as needed

# =============================================================================
# MODE SELECTION
# =============================================================================
# Choose operation mode: 'aws' for cloud services, 'local' for offline operation
MODE=local

# =============================================================================
# LOCAL CONFIGURATION (used when MODE=local)
# =============================================================================
LOCAL_DATA_PATH=./data
FAISS_INDEX_PATH=./data/faiss_index
HF_MODEL_PATH=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# AWS CONFIGURATION (used when MODE=aws)
# =============================================================================
# Uncomment and configure these when using AWS mode
# AWS_PROFILE=default
# AWS_REGION=us-east-1
# BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
# TITAN_EMBEDDINGS_ID=amazon.titan-embed-text-v2:0
# OPENSEARCH_ENDPOINT=https://search-your-domain.us-east-1.aoss.amazonaws.com
# S3_RAW_BUCKET=your-raw-docs-bucket
# S3_CHUNKS_BUCKET=your-processed-chunks-bucket

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=800
CHUNK_OVERLAP=150
TOP_K_RETRIEVAL=5
CONFIDENCE_THRESHOLD=0.35

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOWED_FILE_TYPES=pdf,docx,html,txt
ENABLE_PII_REDACTION=false
BLOCK_LOCALHOST_URLS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
# LOG_FILE_PATH=./data/logs/app.log
ENABLE_STRUCTURED_LOGGING=true